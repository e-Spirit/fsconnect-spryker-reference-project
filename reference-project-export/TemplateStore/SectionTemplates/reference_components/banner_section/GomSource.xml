<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <FS_REFERENCE name="st_picture" hFill="yes" upload="yes" useLanguages="no">
    <FILTER>
      <ALLOW type="picture"/>
    </FILTER>
    <LANGINFOS>
      <LANGINFO lang="*" label="Picture"/>
      <LANGINFO lang="DE" label="Bild"/>
    </LANGINFOS>
    <PROJECTS>
      <LOCAL name=".">
        <SOURCES>
          <FOLDER name="root" store="mediastore"/>
        </SOURCES>
      </LOCAL>
    </PROJECTS>
  </FS_REFERENCE>

  <CMS_INPUT_LINK name="st_link" hFill="yes" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Link target" description="Please choose a link target."/>
      <LANGINFO lang="DE" label="Verweisziel" description="Bitte wÃ¤hlen Sie ein Verweisziel aus."/>
    </LANGINFOS>
    <LINKEDITORS>
      <LINKEDITOR name="category_link"/>
      <LINKEDITOR name="product_link"/>
      <LINKEDITOR name="search_link"/>
      <LINKEDITOR name="magazine_article_link"/>
      <LINKEDITOR name="content_link"/>
      <LINKEDITOR name="external_link"/>
    </LINKEDITORS>
  </CMS_INPUT_LINK>

  <CMS_INPUT_TEXT name="st_title" hFill="yes" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Title"/>
      <LANGINFO lang="DE" label="Titel"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_TEXT name="st_subtitle" hFill="yes" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Subtitle"/>
      <LANGINFO lang="DE" label="Untertitel"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_RADIOBUTTON name="st_variant" gridWidth="3" hFill="yes" useLanguages="no">
    <ENTRIES>
      <ENTRY value="">
        <LANGINFOS>
          <LANGINFO lang="*" label="Left / Dark"/>
          <LANGINFO lang="DE" label="Links / Dunkel"/>
        </LANGINFOS>
      </ENTRY>
      <ENTRY value="center-dark">
        <LANGINFOS>
          <LANGINFO lang="*" label="Center / Dark"/>
          <LANGINFO lang="DE" label="Zentriert / Dunkel"/>
        </LANGINFOS>
      </ENTRY>
      <ENTRY value="right-dark">
        <LANGINFOS>
          <LANGINFO lang="*" label="Right / Dark"/>
          <LANGINFO lang="DE" label="Rechts / Dunkel"/>
        </LANGINFOS>
      </ENTRY>
      <ENTRY value="left-light">
        <LANGINFOS>
          <LANGINFO lang="*" label="Left / Light"/>
          <LANGINFO lang="DE" label="Links / Hell"/>
        </LANGINFOS>
      </ENTRY>
      <ENTRY value="center-light">
        <LANGINFOS>
          <LANGINFO lang="*" label="Center / Light"/>
          <LANGINFO lang="DE" label="Zentriert / Hell"/>
        </LANGINFOS>
      </ENTRY>
      <ENTRY value="right-light">
        <LANGINFOS>
          <LANGINFO lang="*" label="Right / Light"/>
          <LANGINFO lang="DE" label="Rechts / Hell"/>
        </LANGINFOS>
      </ENTRY>
    </ENTRIES>
    <LANGINFOS>
      <LANGINFO lang="*" label="Title Position"/>
      <LANGINFO lang="DE" label="Titel Position"/>
    </LANGINFOS>
  </CMS_INPUT_RADIOBUTTON>

</CMS_MODULE>