<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <FS_INDEX name="st_product" height="1" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Product"/>
      <LANGINFO lang="DE" label="Produkt"/>
    </LANGINFOS>
    <SOURCE name="ContentConnectSpryker/ContentConnectSpryker_ProductDataAccessPlugin"/>
  </FS_INDEX>

  <FS_REFERENCE name="st_picture" hFill="yes" useLanguages="no">
    <FILTER>
      <ALLOW type="picture"/>
    </FILTER>
    <LANGINFOS>
      <LANGINFO lang="*" label="Picture"/>
      <LANGINFO lang="DE" label="Bild"/>
    </LANGINFOS>
    <PROJECTS>
      <LOCAL name=".">
        <SOURCES>
          <FOLDER name="root" store="mediastore"/>
        </SOURCES>
      </LOCAL>
    </PROJECTS>
  </FS_REFERENCE>

  <CMS_INPUT_TEXT name="st_linkText" hFill="yes" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Button link text"/>
      <LANGINFO lang="DE" label="Button Verweistext"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

</CMS_MODULE>