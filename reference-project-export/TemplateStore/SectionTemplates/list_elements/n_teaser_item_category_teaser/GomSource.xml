<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <FS_INDEX name="st_category" height="1" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Category"/>
      <LANGINFO lang="DE" label="Kategorie"/>
    </LANGINFOS>
    <SOURCE name="ContentConnectSpryker/ContentConnectSpryker_CategoryDataAccessPlugin"/>
  </FS_INDEX>

  <CMS_COMMENT>
	Categories have no description in Spryker. 
	So if you want to display a description to the selected category you have to add a description here.
</CMS_COMMENT>

  <FS_REFERENCE name="st_picture" hFill="yes" useLanguages="no">
    <FILTER>
      <ALLOW type="picture"/>
    </FILTER>
    <LANGINFOS>
      <LANGINFO lang="*" label="Picture"/>
      <LANGINFO lang="DE" label="Bild"/>
    </LANGINFOS>
    <PROJECTS>
      <LOCAL name=".">
        <SOURCES>
          <FOLDER name="root" store="mediastore"/>
        </SOURCES>
      </LOCAL>
    </PROJECTS>
  </FS_REFERENCE>

  <CMS_INPUT_TEXT name="st_subline" hFill="yes" maxInputLength="75" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Subtitle"/>
      <LANGINFO lang="DE" label="Untertitel"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_TEXTAREA name="st_text" hFill="yes" maxInputLength="250" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Teaser text"/>
      <LANGINFO lang="DE" label="Teasertext"/>
    </LANGINFOS>
  </CMS_INPUT_TEXTAREA>

  <CMS_INPUT_TEXT name="st_linkText" hFill="yes" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Button link text"/>
      <LANGINFO lang="DE" label="Button Verweistext"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

</CMS_MODULE>