<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_GROUP tabs="top">

    <CMS_GROUP>
      <LANGINFOS>
        <LANGINFO lang="*" label="Media"/>
      </LANGINFOS>

      <CMS_INPUT_RADIOBUTTON name="media" gridWidth="3" hFill="yes" useLanguages="no">
        <ENTRIES>
          <ENTRY value="">
            <LANGINFOS>
              <LANGINFO lang="*" label="&lt;none&gt;"/>
              <LANGINFO lang="DE" label="&lt;ohne&gt;"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="image">
            <LANGINFOS>
              <LANGINFO lang="*" label="Image"/>
              <LANGINFO lang="DE" label="Bild"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="video">
            <LANGINFOS>
              <LANGINFO lang="*" label="Video"/>
            </LANGINFOS>
          </ENTRY>
        </ENTRIES>
        <LANGINFOS>
          <LANGINFO lang="*" label="Media"/>
          <LANGINFO lang="DE" label="Medium"/>
        </LANGINFOS>
      </CMS_INPUT_RADIOBUTTON>

      <FS_REFERENCE name="image" hFill="yes" useLanguages="no">
        <FILTER>
          <ALLOW type="picture"/>
        </FILTER>
        <LANGINFOS>
          <LANGINFO lang="*" label="Image"/>
          <LANGINFO lang="DE" label="Bild"/>
        </LANGINFOS>
        <PROJECTS>
          <LOCAL name=".">
            <SOURCES>
              <FOLDER name="root" store="mediastore"/>
            </SOURCES>
          </LOCAL>
        </PROJECTS>
      </FS_REFERENCE>

      <FS_INDEX name="video" height="1" useLanguages="no" viewMode="details">
        <LANGINFOS>
          <LANGINFO lang="*" label="Video"/>
        </LANGINFOS>
        <SOURCE name="ContentConnectSpryker/ContentConnectSpryker_YoutubeVideoDataAccessPlugin"/>
      </FS_INDEX>

      <CMS_INPUT_RADIOBUTTON name="variant" gridWidth="3" hFill="yes" useLanguages="no">
        <ENTRIES>
          <ENTRY value="">
            <LANGINFOS>
              <LANGINFO lang="*" label="Filled Media"/>
              <LANGINFO lang="DE" label="Ausgefülltes Medium"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="media-left">
            <LANGINFOS>
              <LANGINFO lang="*" label="Media Left"/>
              <LANGINFO lang="DE" label="Medium Links"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="media-right">
            <LANGINFOS>
              <LANGINFO lang="*" label="Media Right"/>
              <LANGINFO lang="DE" label="Medium Rechts"/>
            </LANGINFOS>
          </ENTRY>
        </ENTRIES>
        <LANGINFOS>
          <LANGINFO lang="*" label="Variant"/>
          <LANGINFO lang="DE" label="Variante"/>
        </LANGINFOS>
      </CMS_INPUT_RADIOBUTTON>

    </CMS_GROUP>

    <CMS_INPUT_LINK name="link" hFill="yes" mode="inline" useLanguages="no">
      <LANGINFOS>
        <LANGINFO lang="*" label="Link"/>
      </LANGINFOS>
      <LINKEDITORS>
        <LINKEDITOR name="category_link"/>
        <LINKEDITOR name="product_link"/>
        <LINKEDITOR name="search_link"/>
        <LINKEDITOR name="magazine_article_link"/>
        <LINKEDITOR name="content_link"/>
        <LINKEDITOR name="external_link"/>
      </LINKEDITORS>
    </CMS_INPUT_LINK>

    <CMS_GROUP>
      <LANGINFOS>
        <LANGINFO lang="*" label="Text"/>
      </LANGINFOS>

      <CMS_INPUT_TEXT name="headline" hFill="yes" singleLine="no" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Headline"/>
          <LANGINFO lang="DE" label="Überschrift"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

      <CMS_INPUT_TEXT name="subline" hFill="yes" singleLine="no" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Subline"/>
          <LANGINFO lang="DE" label="Untertitel"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

      <CMS_INPUT_TEXTAREA name="text" hFill="yes" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Text"/>
        </LANGINFOS>
      </CMS_INPUT_TEXTAREA>

    </CMS_GROUP>

    <CMS_GROUP name="tab_appearance">
      <LANGINFOS>
        <LANGINFO lang="*" label="Appearance"/>
      </LANGINFOS>

      <CMS_INPUT_NUMBER name="cols" type="long" hFill="yes" max="6.0" min="2.0" singleLine="no" useLanguages="no">
        <LANGINFOS>
          <LANGINFO lang="*" label="Columns"/>
        </LANGINFOS>
      </CMS_INPUT_NUMBER>

      <CMS_INPUT_NUMBER name="rows" type="long" hFill="yes" min="1.0" singleLine="no" useLanguages="no">
        <LANGINFOS>
          <LANGINFO lang="*" label="Rows"/>
        </LANGINFOS>
      </CMS_INPUT_NUMBER>

    </CMS_GROUP>

  </CMS_GROUP>

</CMS_MODULE>