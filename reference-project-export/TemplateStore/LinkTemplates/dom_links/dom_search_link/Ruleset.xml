<?xml version="1.0" encoding="UTF-8"?>
<RULES>
	<!-- mandatory -->
	<RULE>
		<WITH>
			<PROPERTY name="EMPTY" source="lt_query"/>
		</WITH>
		<DO>
			<NOT>
				<VALIDATION scope="SAVE">
					<PROPERTY name="VALID" source="lt_query"/>
					<MESSAGE lang="*" text="This form element must not be empty!"/>
					<MESSAGE lang="DE" text="Diese Eingabekomponente darf nicht leer sein!"/>
				</VALIDATION>
			</NOT>
		</DO>
	</RULE>
	<!-- mandatory -->
	<RULE>
		<WITH>
			<PROPERTY name="EMPTY" source="lt_linkText"/>
		</WITH>
		<DO>
			<NOT>
				<VALIDATION scope="SAVE">
					<PROPERTY name="VALID" source="lt_linkText"/>
					<MESSAGE lang="*" text="This form element must not be empty!"/>
					<MESSAGE lang="DE" text="Diese Eingabekomponente darf nicht leer sein!"/>
				</VALIDATION>
			</NOT>
		</DO>
	</RULE>
</RULES>